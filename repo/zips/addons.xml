<?xml version='1.0' encoding='utf-8'?>
<addons><addon id="repository.verkurkie" name="Verkurkie Repo" version="1.0.3" provider-name="verkurkie">
    <extension point="xbmc.addon.repository" name="Verkurkie Repo">
        <dir>
            <info compressed="false">https://raw.githubusercontent.com/verkurkie/repository.verkurkie/main/repo/zips/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/verkurkie/repository.verkurkie/main/repo/zips/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/verkurkie/repository.verkurkie/main/repo/zips/</datadir>
            <hashes>true</hashes>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Verkurkie Repo</summary>
        <description>Kodi repository to support the script.iptv.xtream-to-m3u addon and other tools by verkurkie.</description>
        <disclaimer>This repository is provided as-is without any warranties.</disclaimer>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon><addon id="script.iptv.xtream-to-m3u" name="Xtream to M3U" version="1.1.2" provider-name="verku">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
        <import addon="pvr.iptvsimple" />
        <import addon="service.cronxbmc" />
    </requires>
    <extension point="xbmc.python.script" library="main.py">
        <provides>executable</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary lang="en_GB">Reduces Xtream IPTV playlists</summary>
        <description lang="en_GB">A tool to filter and reduce Xtream IPTV playlists for better
            performance in Kodi.</description>
        <license>GPL-2.0-only</license>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon></addons>