<?xml version='1.0' encoding='utf-8'?>
<addons><addon id="repository.verkurkie" name="Verkurkie Repository" version="1.0.2" provider-name="verkurkie">
    <requires>
        <import addon="xbmc.addon" version="20.0.0" />
    </requires>
    <extension point="xbmc.addon.repository" name="Verkurkie Repository">
        <dir>
            <info compressed="false">https://raw.githubusercontent.com/verkurkie/repository.verkurkie/main/repo/zips/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/verkurkie/repository.verkurkie/main/repo/zips/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/verkurkie/repository.verkurkie/main/repo/zips/</datadir>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Verkurkie Repository</summary>
        <description>A repository of add-ons that Verkurkie developed for a personal Kodi system</description>
        <disclaimer />
        <news>1.0.2
- fix: changelog not being updated in CI</news>
        <platform>all</platform>
        <language />
        <license>GNU GENERAL PUBLIC LICENSE. Version 3, 29 June 2007</license>
        <forum />
        <website />
        <source>https://github.com/verkurkie/repository.verkurkie</source>
        <email>github at verkurkie dot com</email>
    </extension>
</addon><addon id="script.iptv.xtream-to-m3u" name="Xtream to M3U" version="1.0.11" provider-name="verku">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
        <import addon="pvr.iptvsimple" />
    </requires>
    <extension point="xbmc.python.script" library="main.py">
        <provides>executable</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary lang="en_GB">Reduces Xtream IPTV playlists</summary>
        <description lang="en_GB">A tool to filter and reduce Xtream IPTV playlists for better
            performance in Kodi.</description>
        <license>GPL-2.0-only</license>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon></addons>